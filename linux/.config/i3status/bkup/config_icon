## Battery
battery 0 {
    # format = "%status %percentage %remaining %emptytime"
    format = "%status %percentage %remaining"
    format_down = " NO battery "
    last_full_capacity = true
    integer_battery_capacity = true
    status_chr = "ïƒ§"
    status_bat = "ï‰‚ "
    status_unk = "ï‰€ "
#   status_full = "ï‰€ "
    status_full = "ðŸ”Œ"
    # status_chr = "âš¡"
    #status_bat = "ðŸ”‹ BAT"
    # status_full = "â˜»"
    low_threshold = 25
    threshold_type = time
}


